<?xml version="1.0"?>
<block>
  <name>OFDM Sampler</name>
  <key>dab_ofdm_sampler</key>
  <category>[DAB]</category>
  <import>import dab</import>
  <make>dab.ofdm_sampler($fft_length, $cp_length, $symbols_per_frame, $gap)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>fft_length</name>
    <key>fft_length</key>
    <type>int</type>
  </param>
  <param>
    <name>cp_length</name>
    <key>cp_length</key>
    <type>int</type>
  </param>
  <param>
    <name>symbols_per_frame</name>
    <key>symbols_per_frame</key>
    <type>int</type>
  </param>
  <param>
    <name>gap</name>
    <key>gap</key>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>sync</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$fft_length</vlen>
  </source>
  <source>
    <name>sync</name>
    <type>byte</type>
  </source>
</block>
